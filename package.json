{
    "name": "gluehtml",
    "version": "0.25.3",
    "license": "MIT",
    "author": "Max Zakharzhevskiy",
    "description": "Glue HTML local external files into solid HTML",
    "homepage": "https://github.com/maxzz/gluehtml/tree/master/#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/maxzz/gluehtml.git"
    },
    "bugs": {
        "url": "https://github.com/maxzz/gluehtml/issues"
    },
    "engines": {
        "node": ">=18"
    },
    "keywords": [
        "HTML",
        "single",
        "page",
        "typescript",
        "cheerio"
    ],
    "targets": {
        "default": {
            "includeNodeModules": false,
            "source": "src/index.ts",
            "distDir": "./dist",
            "isLibrary": false,
            "optimize": true
        }
    },
    "bin": "dist/cli.js",
    "source": "src/index.ts",
    "files": [
        "dist/**.*"
    ],
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/minimist": "1.2.5",
        "@types/node": "^24.3.1",
        "html-format": "^1.1.7",
        "ts-loader": "^6.2.1",
        "tsup": "^8.5.0",
        "tsx": "^4.20.5",
        "typescript": "5.9.2"
    },
    "dependencies": {
        "@types/cheerio": "0.22.31",
        "chalk": "^5.6.0",
        "cheerio": "0.22.0",
        "fs-extra": "^11.3.1",
        "minimist": "1.2.8"
    },
    "scripts": {
        "tsc": "tsc -w",
        "build": "tsup --entry.gluehtml src/index.ts --entry.cli src/cli.ts --format cjs --clean",
        "prepublish": "pnpm build",
        "to-npm": "pnpm build && pnpm publish --no-git-checks"
    }
}

{
    "name": "gluehtml",
    "version": "0.2.12",
    "license": "MIT",
    "author": "Max Zakharzhevskiy",
    "description": "Glue HTML local external files into solid HTML",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/maxzz/gluehtml.git"
    },
    "bugs": {
        "url": "https://github.com/maxzz/gluehtml/issues"
    },
    "homepage": "https://github.com/maxzz/gluehtml/tree/master/#readme",
    "engines": {
        "node": ">=16"
    },
    "targets": {
        "default": {
            "includeNodeModules": true,
            "source": "src/main.ts",
            "distDir": "./dist",
            "isLibrary": true,
            "optimize": true
        }
    },
    "keywords": [
        "HTML",
        "single",
        "page",
        "typescript",
        "cheerio"
    ],
    "bin": "dist/cli.js",
    "source": "src/main.ts",
    "files": [
        "dist/**.*"
    ],
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/minimist": "1.2.5",
        "@types/node": "^24.3.1",
        "ts-loader": "^6.2.1",
        "tsup": "^8.5.0",
        "tsx": "^4.20.5",
        "typescript": "5.9.2"
    },
    "dependencies": {
        "chalk": "^5.6.0",
        "cheerio": "1.1.2",
        "fs-extra": "^11.3.1",
        "minimist": "1.2.8"
    },
    "scripts": {
        "dev": "tsc -w",
        "build": "tsup --entry.main src/index.ts --entry.cli src/cli.ts --format cjs --clean",
        "_build-ts": "parcel build --no-source-maps",
        "_build": "rm -rf dist && yarn build-ts && cp src/cli.js dist",
        "prepublish": "pnpm build"
    }
}
